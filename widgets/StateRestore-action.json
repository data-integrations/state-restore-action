{
  "metadata": {
    "spec-version": "1.5"
  },
  "display-name": "State Restore",
  "configuration-groups": [
    {
      "label": "State Restore Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Tracking table where state is stored",
          "name": "trackingTable",
          "widget-attributes": {
            "width": "large",
            "default": "trackingTable"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Key to retrieve state stored in tracking table",
          "name": "key",
          "widget-attributes": {
            "width": "large",
            "default": "state"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Default value used if state is not present in tracking table",
          "name": "defaultValue",
          "widget-attributes": {
            "width": "large",
            "default": ""
          }
        }
      ]
    }
  ],
  "outputs": [
    {
      "name": "schema",
      "label": "schema",
      "widget-type": "schema"
    }
  ]
}
